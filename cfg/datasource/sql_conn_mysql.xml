<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<sqlMapConfig>
	<!-- 对数据库的基本设置 -->
	<settings 
		cacheModelsEnabled="true" 
		enhancementEnabled="true"
		lazyLoadingEnabled="true" 
		errorTracingEnabled="true"
		maxRequests="2560" 
		maxSessions="256"
		maxTransactions="256" 
		useStatementNamespaces="true" />
	
	<sqlMap resource="cn.sh.ittc.mytest.xml"/>
	<sqlMap resource="cn.sh.ittc.product.xml"/>
	<sqlMap resource="cn.sh.ittc.log.xml"/>
	<sqlMap resource="cn.sh.ittc.dev.xml"/>
	<sqlMap resource="cn.sh.ittc.user.xml"/>
	<sqlMap resource="cn.sh.ittc.wechat.xml"/>
	
</sqlMapConfig>
